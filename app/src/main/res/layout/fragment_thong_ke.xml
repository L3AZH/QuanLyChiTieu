<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Home.fragment.ThongKeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_height="250dp"
                    android:layout_width="250dp"
                    android:id="@+id/piechart"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="100dp">
                        <View
                            android:id="@+id/vColorWallet1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/purple_200"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/tvColorWallet1"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="1"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <View
                            android:id="@+id/vColorWallet2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/purple_200"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/tvColorWallet2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="1"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <View
                            android:id="@+id/vColorWallet3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/purple_200"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/tvColorWallet3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="1"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <View
                            android:id="@+id/vColorWallet4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/purple_200"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/tvColorWallet4"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="1"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <View
                            android:id="@+id/vColorWallet5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/purple_200"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/tvColorWallet5"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="1"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <View
                            android:id="@+id/vColorWallet6"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/purple_200"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/tvColorWallet6"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="1"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="270dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="26sp"
                    android:text="Thống kê chi tiêu"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/tvWalletType1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Wallet type 1"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvWalletType1Percent"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="10.000.000đ"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/tvWalletType2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Wallet type 2"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvWalletType2Percent"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="10.000.000đ"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/tvWalletType3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Wallet type 3"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvWalletType3Percent"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="10.000.000đ"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/tvWalletType4"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Wallet type 4"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvWalletType4Percent"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="10.000.000đ"
                        android:textSize="20sp" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>